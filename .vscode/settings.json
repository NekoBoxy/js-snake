{
  //指定自動添加前綴詞的樣式
  "liveSassCompile.settings.autoprefix": [
    //添加大於 1% 的瀏覽器市佔率的前綴詞，以及最新兩個版本的前綴詞
    "> 1%",
    "last 2 versions"
  ],
  //指定編譯後的 CSS 檔案格式和路徑
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded", // 不壓縮
      "extensionName": ".css", //指定編譯後的 CSS 檔案名稱為 .css
      "savePath": "/assets/css" // 指定轉出路徑
    }
  ],
  //是否在編譯時顯示通知
  "liveSassCompile.settings.showAnnouncements": true,
  //是否產生 sourcemap 檔
  "liveSassCompile.settings.generateMap": false
}
